{
  "private": true,
  "name": "hela-monorepo",
  "workspaces": [
    "commands/*",
    "modules/*",
    "packages/*",
    "presets/*"
  ],
  "author": "Charlike Mike Reagent <opensource@tunnckocore.com>",
  "scripts": {
    "bootstrap": "lerna bootstrap --since",
    "clean:fresh": "lerna clean -y && rm -rf node_modules yarn.lock",
    "lint:lockfile": "lockfile-lint --path yarn.lock --type yarn --validate-https",
    "release": "lerna version && lerna publish from-package",
    "presetup": "echo foo-bar",
    "setup": "yarn && yarn run lint:lockfile && yarn run bootstrap",
    "setup:ci": "yarn --frozen-lockfile && yarn run lint:lockfile && yarn run bootstrap"
  },
  "dependencies": {
    "@tunnckocore/eslint-config": "^5.4.5",
    "@tunnckocore/prettier-config": "^1.3.4",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lockfile-lint": "^4.0.0",
    "prettier": "^1.19.1",
    "prettier-plugin-pkgjson": "^0.2.4"
  }
}
